{% extends 'admin/base.html.twig' %}

{% block title %}List intervention
{% endblock %}
{% block h2 %}Liste des interventions
{% endblock %}
{% block content %}
	<div class="col-10 mt-5">
		<div class="table-responsive">
			<table class="table table-striped table-dark text-center">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Nom du client</th>
						<th scope="col">Date de prise en charge</th>
						<th scope="col">Date de fin estimée</th>
						<th scope="col">Statut</th>
						<th scope="col">Voir</th>
						<th scope="col">Supprimer</th>
					</tr>
				</thead>
				<tbody>
				{% for repair in allrepair %}
				
					<tr>
						<th scope="row"> {{repair.id}} </th>
						<td>{{repair.client.lastname}}</td>
						<td>{{repair.dateSupported|date('d-m-Y') }}</td>
						<td>{{repair.dateEnd|date('d-m-Y') }}</td>
						<td>{{repair.status.name}}</td>
						<td>
							<a href="/admin/details/{{repair.id}}">
								<i class="icofont-arrow-right text-white"></i></a>
							
						</td>
						<td>
							<div class="custom-control custom-switch">
								<input type="checkbox" class="custom-control-input repairswitches" repairswitches="{{repair.id}}" id="customSwitches{{repair.id}}" {% if repair.isActive %} checked {% endif %}>
								<label class="custom-control-label" for="customSwitches{{repair.id}}"></label>
							</div>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="d-flex justify-content-end">
			<a class="btn bg-black text-white" href="/admin/addtache">Ajouter une tâche</a>
		</div>
	</div>
{% endblock %}
