{% extends 'admin/base.html.twig' %}

{% block title %}List customer
{% endblock %}
{% block h2 %}Liste des clients
{% endblock %}
{% block content %}


	<div class="col-10 mt-5">
		<table class="table table-striped table-dark text-center">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					<th scope="col">Email</th>
					<th scope="col">Téléphone</th>
					<th scope="col">Éditer</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
			{% for customer in allCustomer %}

				<tr>
					<th scope="row">{{ customer.id }}</th>
					<td>{{ customer.lastname }}</td>
					<td>{{ customer.firstname }}</td>
					<td>{{ customer.email }}</td>
					<td>{{ customer.phonenumber }}</td>
					<td>
						<a href="/admin/editcustomer/{{customer.id}}">
							<i class="icofont-arrow-right text-white"></a>
						</i>
					</td>
					<td>
						<div class="custom-control custom-switch">
							<input type="checkbox" class="custom-control-input customerswitches" customerswitches="{{customer.id}}" id="customSwitches{{customer.id}}"  {% if customer.isActive %} checked {% endif %}>
							<label class="custom-control-label" for="customSwitches{{customer.id}}"></label>
						</div>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
