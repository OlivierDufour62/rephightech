{% extends 'admin/base.html.twig' %}

{% block title %}List intervention
{% endblock %}
{% block h2 %}Liste des interventions
{% endblock %}
{% block content %}
	<div class="col-10 mt-5">
		<div class="table-responsive">
			<table class="table table-striped table-dark text-center">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Nom du client</th>
						<th scope="col">Date de prise en charge</th>
						<th scope="col">Date de fin estimÃ©e</th>
						<th scope="col">Statut</th>
						<th scope="col">Envoyer</th>
					</tr>
				</thead>
				<tbody>
					{% for repair in inter %}
						<tr>
							<th scope="row">
								{{repair.id}}
							</th>
							<td>{{repair.client.lastname}}</td>
							<td>{{repair.dateSupported|date('d-m-Y') }}</td>
							<td>{{repair.dateEnd|date('d-m-Y') }}</td>
							<td>{{repair.status.name}}</td>
							<td>
							
								<a id="{{repair.id}}" class="btn bg-black text-white send sendprovider">Envoyer</a>
							</td>
						</tr>
					{% endfor %}
					<div class="d-none">
						<div id="dialog" class="" title="Prestataires">
							{{ form_start(form)}}
							{{ form_widget(form.users)}} 
							<button class="btn bg-black text-white my-2 my-sm-0 ml-3">Envoyer</button>
							{{ form_end(form) }}
						</div>
					</div>
					{# {{dump(form.provider)}} #}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
