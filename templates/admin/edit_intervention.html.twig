{% extends 'admin/base.html.twig' %}

{% block title %}Details intervention
{% endblock %}
{% block h2 %}Détails intervention
{% endblock %}
{% block content %}


	<div class="col-10 mt-5">
		{{ form_start(formrepair)}}
			<div class="col-9 mx-auto">
				<div class="col-5 p-0">
					<input type="text" class="form-control" placeholder="Référence client">
				</div>
				<div class="row mt-4">
					<div class="col">
					{# {{ form_widget(formrepair.client.lastname, {'attr': {'class': 'form-control','placeholder':'Nom du client'}})}} #}
					</div>
					<div class="col">
					{{ form_widget(formrepair.status.name, {'attr': {'class': 'form-control'}})}}
					</div>
				</div>
				<div class="row mt-4">
					<div class="col">
						<label for="">Date de prise en charge</label>
						{{ form_widget(formrepair.dateSupported, {'attr': {'class': 'form-control'}})}}
					</div>
					<div class="col">
						<label for="">Date de fin estimée</label>
						{{ form_widget(formrepair.dateEnd, {'attr': {'class': 'form-control'}})}}
					</div>
				</div>
				<div class="col mx-auto mt-4 p-0">
					{{ form_widget(formrepair.duration, {'attr': {'class': 'form-control','placeholder':'Durée estimée'}})}}
				</div>
				<div class="row p-0">
					<div class="form-group col">
						{{ form_widget(formrepair.description, {'attr': {'class': 'form-control resize mt-4','placeholder':'Description', 'rows':'5'}})}}
					</div>
					<div class="form-group col">
						{# {{ form_widget(formrepair.comment, {'attr': {'class': 'form-control resize mt-4','placeholder':'Commentaire', 'rows':'5'}})}} #}
					</div>
				</div>
				<div class="col-4 mx-auto">
				{{ form_widget(formrepair.image, {'attr': {'class': 'form-control-file'}})}}

					<img src="/assets/img/pc.webp" class="img-fluid" alt="">
				</div>
				<div class="mt-4 d-flex justify-content-center">
					<button class="btn bg-black text-white my-2 my-sm-0 ml-3" type="submit">Enregistrer modification</button>
				</div>
			</div>
		{{ form_end(formrepair) }}
		<div class="col-10 d-flex justify-content-center mx-auto">
			<table class="table table-striped table-dark w-75 mt-5">
				<thead>
					<tr>
						<th class="text-center" scope="col">ID employé(e)</th>
						<th class="text-center" scope="col">Référence</th>
						<th class="text-center" scope="col">Commentaire</th>
						<th class="text-center" scope="col">Voir</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">1</th>
						<td class="text-center">XXXXXXXXX</td>
						<td class="text-center">Piéces en commande</td>
						<td class="text-center">
							<i class="icofont-arrow-right text-white"></td>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
