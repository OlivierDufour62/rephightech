{% extends 'admin/base.html.twig' %}

{% block title %}List intervention
{% endblock %}
{% block h2 %}Liste des interventions
{% endblock %}
{% block content %}
	<div class="col-8 mt-5 mx-auto">
		<div class="table-responsive">
			<table class="table table-striped table-dark text-center">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Nom</th>
						<th scope="col">Email</th>
						<th scope="col">Ville</th>
						<th scope="col">Modifier</th>
						<th scope="col">Supprimer</th>
					</tr>
				</thead>
				<tbody>
				{% for provider in allprovider %}
				
					<tr>
						<th scope="row"> {{provider.id}} </th>
						<td>{{provider.name}}</td>
						<td>{{provider.email }}</td>
						<td>{{provider.city }}</td>
						<td>
							<a href="/admin/editprovider/{{provider.id}}">
								<i class="icofont-arrow-right text-white"></i></a>
							
						</td>
						<td>
							<div class="custom-control custom-switch">
								<input type="checkbox" class="custom-control-input providerswitches" providerswitches="{{provider.id}}" id="customSwitches{{provider.id}}" {% if provider.isActive %} checked {% endif %}>
								<label class="custom-control-label" for="customSwitches{{provider.id}}"></label>
							</div>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="d-flex justify-content-end">
			<a class="btn bg-black text-white" href="/admin/addtache">Ajouter une t√¢che</a>
		</div>
	</div>
{% endblock %}
