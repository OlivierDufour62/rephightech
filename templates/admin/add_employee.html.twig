{% extends 'admin/base.html.twig' %}

{% block title %}add employee
{% endblock %}
{% block h2 %}Ajouter un employé
{% endblock %}
{% block content %}


	<div class="col-10 mt-5 p-0 ">
		<div class="col-6 mx-auto bg text-white successsend d-none bg-success">
			<p>Employé enregistrer</p>
		</div>
		<div class="d-flex flex-column justify-content-center">
			{{ form_start(form, {'attr': {'class': 'col-12 mx-auto ajaxaddemployee'}})}}
			<div class="mt-4 col-12 text-center">
				<div class="form-check bord">
					{{ form_widget(form.users.genre, {'attr': {'class': 'form-control radio-custom bord'}})}}
				</div>
			</div>
			<div class="row w-100 col-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.users.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}})}}
				</div>
				<div class="col">
					{{ form_widget(form.users.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}})}}
				</div>
			</div>
			<div class="row w-100 col-12 col-md-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.users.email, {'attr': {'class': 'form-control', 'placeholder': 'Email' }})}}
				</div>
				<div class="col">
					{{ form_widget(form.users.password, {'attr': {'class': 'form-control', 'placeholder': 'Password' }})}}
				</div>
			</div>
			<div class="row w-100 col-12 col-md-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.users.name, {'attr': {'class': 'form-control', 'placeholder': 'name' }})}}
				</div>
				<div class="col">
					{{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': 'adresse' }})}}
				</div>
			</div>
			<div class="row w-100 col-12 col-md-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.zipcode, {'attr': {'class': 'form-control', 'placeholder': 'zipcode' }})}}
				</div>
				<div class="col">
					{{ form_widget(form.number, {'attr': {'class': 'form-control', 'placeholder': 'number' }})}}
				</div>
			</div>
			<div class="row w-100 col-12 col-md-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': 'city' }})}}
				</div>
			</div>
			<div class="w-100 col-12 col-md-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.users.phonenumber, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}})}}
				</div>
			</div>
			<div class="w-100 col-12 col-md-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.users.role, {'attr': {'class': 'form-control'}})}}
				</div>
			</div>
			<div class="mt-4 d-flex justify-content-center">
				<button class="btn bg-black text-white my-2 my-sm-0 ml-3" id="addemployee">Enregistrer</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
