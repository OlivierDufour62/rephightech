{% extends 'admin/base.html.twig' %}

{% block title %}add employee
{% endblock %}
{% block h2 %}Ajouter un employé
{% endblock %}
{% block content %}


	<div class="col-10 mt-5 p-0 ">
		<div class="col-6 mx-auto bg text-white successsend d-none bg-success">
			<p>Prestataire enregistrer</p>
		</div>
		<div class="d-flex flex-column justify-content-center">
			{{ form_start(form, {'attr': {'class': 'col-12 mx-auto ajaxaddprovider'}})}}
			<div class="mt-4 col-12 col-md-6 mx-auto p-0">
				<div class="col">
					{{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}})}}
				</div>
			</div>
			<div class="row w-100 col-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}})}}
				</div>
				<div class="col">
					{{ form_widget(form.number, {'attr': {'class': 'form-control', 'placeholder': 'Numéro'}})}}
				</div>
			</div>
			<div class="row w-100 col-12 col-md-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.adress, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}})}}
				</div>
				<div class="col">
					{{ form_widget(form.zipcode, {'attr': {'class': 'form-control', 'placeholder': 'Code postal' }})}}
				</div>
			</div>
			<div class="w-100 col-12 col-md-6 p-0 m-0 mx-auto mt-4">
				<div class="col">
					{{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': 'ville' }})}}
				</div>
			</div>
			<div class="mt-4 d-flex justify-content-center">
				<button class="btn bg-black text-white my-2 my-sm-0 ml-3" id="addprovider">Enregistrer</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
